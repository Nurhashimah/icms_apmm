<div class="tform">
<H2>Timetable Entry</H2>
  <table width=100% >
		<tr>
			<td class="leftcol"><label for="class_id">Class Name</label></td>
			<td><b>:</b></td>
			<td><%#= f.collection_select :classroom_id, Klass.find(:all), :id, :name, :include_blank => true %>
				<%= f.collection_select :classroom_id, Klass.find(:all), :id, :name, {:include_blank => true},
										:onchange => remote_function(:update => form_tag_id(f.object_name, :student_list), 
										:url => {:action => 'view_student' }, 
										:with => "'classroomid='+$('"+form_tag_id(f.object_name, :classroom_id)+"').value") %>
			</td>
		</tr>

		<tr>
			<td class="leftcol"><label for="topic_id">Topic</label></td>
			<td><b>:</b></td>
			<td><%= f.collection_select :topic_id, Topic.find(:all), :id, :topic_subject, :include_blank => true%></td>
		</tr>

		<tr>
			<td class="leftcol"><label for="staff_id">Staff Name</label></td>
			<td><b>:</b></td>
			<td><%= f.collection_select :staff_id, Staff.find(:all), :id, :staff_name_with_position, :include_blank => true%></td>
		</tr>

		<tr>
			<td class="leftcol"><label for="residence_id">Location</label></td>
			<td><b>:</b></td>
			<td><%= f.collection_select :location_id, Location.find(:all,  :conditions => {:typename => 6}, :order => :id), :id, :location_list, :include_blank => true %></td>
		</tr>

		<tr>
			<td class="leftcol"><label for="timing_id">Start</label></td>
			<td><b>:</b></td>
			<td><%= f.datetime_select :start_at, :minute_step => 15, :include_blank => true %></td>
		</tr>

		<tr>
			<td class="leftcol"><label for="timing_id">End</label></td>
			<td><b>:</b></td>
			<td><%= f.datetime_select :end_at, :minute_step => 15, :include_blank => true %></td>
		</tr>
</table>
<H2>Students</H2>
<table width=90%>
	<tr>
		<td>
			<%= tag("div", :id => form_tag_id(f.object_name, :student_list)) %></div>
		</td>
	</tr>
</table>
